  Scanner input = new Scanner(System.in);
     int num1;
     int num2;
     double answer =0;
     System.out.println("Enter number 1");
     num1=input.nextInt();
      System.out.println("Enter number 2");
     num2=input.nextInt();
     
     
     try{
     answer = num1/num2;} 
    
    catch (Exception justin)
    {
        System.out.println("you cannot divide by 0");
